@model IEnumerable<SavingStudentProject.Models.Student>

@{
    ViewBag.Title = "Index";
}

<h2>STUDENT LIST</h2>

<p>
    @Html.ActionLink("Create New", "Create") <!-- ekranda görülen isim, action ismi-->
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.StudentName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StudentSurname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StudentMail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StudentAddress)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.StudentName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StudentSurname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StudentMail)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StudentAddress)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.StudentID }, new { @class = "btn btn-warning"}) |
            @Html.ActionLink("Details", "Details", new { id=item.StudentID }, new { @class = "btn btn-primary" }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.StudentID }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
